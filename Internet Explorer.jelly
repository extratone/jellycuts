	case("Add gyroscopic scroll"):
		runJavascriptOnWebpage(url: ShortcutInput, javascript: "
const handleOrientation = event => {

  const x = event.beta;



  if (x < 40 && x > 20) return;



  if (x > 40 && x <= 60) {

    window.scrollBy(0, 9);

  } else if (x > 60) {

    window.scrollBy(0, 10);

  } else {

    window.scrollBy(0, -9);

  }

};



window.addEventListener("deviceorientation", handleOrientation);



completion();")
	case("Barrel roll"):
		runJavascriptOnWebpage(url: ShortcutInput, javascript: "
